{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ts-node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "args": [
        "${workspaceRoot}/src/index.ts"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {

      "type": "node",
      "request": "launch",
      "name": "ts-node-dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
      "protocol":"inspector",
      "port": 9229,
      "restart": true,
      "program": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "args": [
        "--inspect",
        "--no-notify",
        "--respawn",
        "--transpileOnly",
        "${workspaceRoot}/src"
      ]
    }
  ]
}